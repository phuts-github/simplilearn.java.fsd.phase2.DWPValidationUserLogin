<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>DWPValidationUserLogin</display-name>
  <welcome-file-list>
	<welcome-file>home.htm</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>com.simplilearn.servlet.LoginServlet</servlet-name>
    <servlet-class>com.simplilearn.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.simplilearn.servlet.LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping> 

  <servlet>
    <servlet-name>com.simplilearn.servlet.LogoutServlet</servlet-name>
    <servlet-class>com.simplilearn.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.simplilearn.servlet.LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>    
  
   <servlet>
    <servlet-name>com.simplilearn.servlet.DashBoardServlet</servlet-name>
    <servlet-class>com.simplilearn.servlet.DashBoardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>com.simplilearn.servlet.DashBoardServlet</servlet-name>
    <url-pattern>/DashBoardServlet</url-pattern>
  </servlet-mapping> 
  
</web-app>